{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "test:e2e": "cross-env WAIT_ON_TIMEOUT=300000 start-server-and-test \"yarn dev\" http://localhost:3000 \"yarn playwright test\"",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:autofill": "playwright test test/e2e/RegistHorseAutoFill.spec.ts",
    "test:e2e:autofill:ui": "playwright test test/e2e/RegistHorseAutoFill.spec.ts --ui",
    "test:e2e:ci": "start-server-and-test start http://localhost:3000 \"playwright test\"",
    "e2e:report": "playwright show-report",
    "e2e:dev": "start-server-and-test dev http://localhost:3000 e2e",
    "e2e:prod": "start-server-and-test \"yarn build && yarn start\" http://localhost:3000 e2e",
    "report": "playwright show-report",
    "test": "jest --config jest.config.js"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "core-js": "^3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "nodemailer": "^7.0.6",
    "nuxt": "2.18.1",
    "pg": "^8.16.3",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@nuxt/types": "^2.18.1",
    "@nuxt/typescript-build": "^3.0.2",
    "@playwright/test": "^1.57.0",
    "@types/axios": "^0.14.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@vue/test-utils": "1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-transform-stub": "^2.0.0",
    "start-server-and-test": "^2.1.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3",
    "vue-jest": "3",
    "vue-template-compiler": "^2.7.16",
    "wait-on": "^9.0.3"
  }
